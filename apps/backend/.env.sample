homefixit_PRIMARY.ENV="local"

homefixit_SERVER.PORT="8080"
homefixit_SERVER.READ_TIMEOUT="30"
homefixit_SERVER.WRITE_TIMEOUT="30"
homefixit_SERVER.IDLE_TIMEOUT="60"
homefixit_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

homefixit_DATABASE.HOST="localhost"
homefixit_DATABASE.PORT="5432"
homefixit_DATABASE.USER="postgres"
homefixit_DATABASE.PASSWORD=""
homefixit_DATABASE.NAME="homefixit"
homefixit_DATABASE.SSL_MODE="disable"
homefixit_DATABASE.MAX_OPEN_CONNS="25"
homefixit_DATABASE.MAX_IDLE_CONNS="25"
homefixit_DATABASE.CONN_MAX_LIFETIME="300"
homefixit_DATABASE.CONN_MAX_IDLE_TIME="300"

homefixit_AUTH.SECRET_KEY="secret"

homefixit_INTEGRATION.RESEND_API_KEY="resend_key"

homefixit_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
homefixit_OBSERVABILITY.SERVICE_NAME="homefixit"
homefixit_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
homefixit_OBSERVABILITY.LOGGING.LEVEL="debug"
homefixit_OBSERVABILITY.LOGGING.FORMAT="console"
homefixit_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
homefixit_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
homefixit_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
homefixit_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
homefixit_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
homefixit_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
homefixit_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
homefixit_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
homefixit_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"